<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4dp"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_4dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_18sp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imageView_rowAdvert"
            android:layout_width="200sp"
            android:layout_height="140dp"
            android:padding="@dimen/_16sp"
            android:scaleType="centerCrop"
            android:src="@drawable/padrao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_16sp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:id="@+id/textView_rowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_lcd_sony_bravia_32"
                android:textColor="@color/black_100"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/textView_rowPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_0_00"
                android:textColor="@color/black_100"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
